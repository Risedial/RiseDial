{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/api/*": ["./src/api/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts", "scripts/**/*.ts"],
  "exclude": [
    "node_modules", 
    "tests/**/*", 
    "**/tests/**/*",
    "**/*.test.ts", 
    "**/*.test.tsx", 
    "**/*.spec.ts", 
    "**/*.spec.tsx",
    "jest.config.js",
    "test-orchestrator.js"
  ]
} 